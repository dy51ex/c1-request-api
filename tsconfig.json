{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "ES2020",
    "lib": [
      "ESNext",
      "DOM",
    ],
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
  }
}